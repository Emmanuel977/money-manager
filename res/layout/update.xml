<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<DatePicker android:id="@+id/datePicker"
		android:startYear="1900" android:endYear="2200"
		android:layout_width="fill_parent" android:layout_height="wrap_content" />
	<EditText android:id="@+id/activity_enter"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:hint="@string/activity_hint" android:lines="1"
		android:textSize="20px" />
	<LinearLayout android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:layout_width="50px" android:layout_height="wrap_content"
			android:text="@string/spend_edit" android:typeface="normal"
			android:textSize="15px" android:textStyle="bold" />
		<EditText android:id="@+id/spend_edit" android:layout_width="80px"
			android:layout_height="wrap_content" android:hint="100"
			android:textSize="20px" android:gravity="center" android:numeric="integer"
			android:padding="5dp" />
	</LinearLayout>
</LinearLayout>
